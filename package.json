{
  "name": "workbench-api-services",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "test": "jest --no-watch",
    "prettier": "prettier --config ./.prettierrc \"**/*.+(js|jsx|json|css|scss|md|html|yaml)\"",
    "format": "npm run prettier -- --write",
    "lint": "eslint src --fix"
  },
  "dependencies": {
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "express": "~4.16.0",
    "morgan": "~1.9.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.+(js|jsx)": [
      "npm run lint",
      "npm run test -- --no-watch"
    ],
    "**/*.+(js|jsx|json|css|scss|md|html|yaml)": [
      "npm run format",
      "git add"
    ]
  },
  "devDependencies": {
    "eslint": "^5.14.1",
    "jest": "^24.1.0",
    "prettier": "^1.16.4"
  }
}
